    ];

    function tokenize(t){return t.toLowerCase().match(/[a-z']+/g)||[];}
    function sentences(t){return t.split(/[.!?]+/).map(s=>s.trim()).filter(s=>s.length>0);}
    function mean(a){return a.length?a.reduce((x,y)=>x+y,0)/a.length:0;}
    function cv(a){var m=mean(a);if(!m)return 0;var v=Math.sqrt(a.reduce((s,x)=>s+(x-m)**2,0)/a.length);return v/m;}

    function analyzeText(text) {
      var sents=sentences(text), words=tokenize(text);
      if(words.length<10) return {score:0.5,verdict:"Too short",cls:"uncertain"};

      // Sentence variance
      var sLens=sents.map(s=>s.split(/\s+/).length);
      var svScore=sents.length<3?0.5:Math.max(0,Math.min(1,1-(cv(sLens)-0.2)/0.6));

      // Vocabulary richness
      var ttr=(new Set(words)).size/words.length;
      var vrScore=Math.max(0,Math.min(1,1-(ttr-0.3)/0.4));

      // AI phrases
      var lower=text.toLowerCase(),phraseW=0;
      AI_PHRASES.forEach(function(x){if(lower.includes(x.p))phraseW+=x.w;});
      var apScore=Math.min(1,phraseW/3);

      // Contractions
      var cCount=0;words.forEach(function(w){if(CONTRACTIONS.indexOf(w)>=0)cCount++;});
      var cRate=cCount/words.length;
      var cuScore=Math.max(0,Math.min(1,1-cRate/0.04));

      // Repetition
      var repScore=0.5;
      if(sents.length>=4){
        var starters={};sents.forEach(function(s){var k=s.split(/\s+/).slice(0,2).join(' ').toLowerCase();starters[k]=(starters[k]||0)+1;});
        repScore=Math.min(1,Math.max.apply(null,Object.values(starters))/sents.length*2);
      }

      var weighted=svScore*0.12+vrScore*0.18+apScore*0.25+cuScore*0.15+repScore*0.10;
      var total=0.12+0.18+0.25+0.15+0.10;
      var score=weighted/total;

      var verdict,cls;
      if(score>=0.6){verdict="Likely AI-Generated";cls="ai";}
      else if(score>=0.4){verdict="Uncertain";cls="uncertain";}
      else{verdict="Likely Human-Written";cls="human";}
      return {score:score,verdict:verdict,cls:cls};
    }

    // Pre-computed results for non-text samples (from Manuscript API)
    var RESULTS = {
      "image-human":  {score:0.22, verdict:"Likely Human", cls:"human"},
      "image-ai":     {score:0.81, verdict:"Likely AI-Generated", cls:"ai"},
      "audio-human":  {score:0.18, verdict:"Likely Human", cls:"human"},
      "audio-ai":     {score:0.76, verdict:"Likely AI-Generated", cls:"ai"},
      "video-human":  {score:0.15, verdict:"Likely Human", cls:"human"},
      "video-ai":     {score:0.85, verdict:"Likely AI-Generated", cls:"ai"},
    };

    function renderResult(target, result) {
      var pct = Math.round(result.score * 100);
      target.innerHTML =
        '<div class="result-display">' +
          '<div class="result-verdict-text ' + result.cls + '">' + result.verdict + '</div>' +
          '<div class="result-score-bar">' +
            '<div class="score-bar-track"><div class="score-bar-fill ' + result.cls + '" style="width:' + pct + '%"></div></div>' +
          '</div>' +
          '<div class="result-score-label">AI Score: ' + pct + '%</div>' +
        '</div>';
    }

    // Wire up all analyze buttons
    document.querySelectorAll('.btn-analyze[data-analyze]').forEach(function(btn) {
      btn.addEventListener('click', function() {
        var key = btn.getAttribute('data-analyze');
        var target = document.getElementById('result-' + key);
        if (!target) return;

        if (key === 'text-human' || key === 'text-ai') {
          var el = document.getElementById(key);
          if (el) {
            var result = analyzeText(el.textContent);
            renderResult(target, result);
          }
        } else if (RESULTS[key]) {
          renderResult(target, RESULTS[key]);
        }

        btn.textContent = 'Analyzed';
        btn.classList.add('done');
        btn.disabled = true;
      });
    });
  })();
</script>
